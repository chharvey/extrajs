{
	"compilerOptions": {
		// Project Options
		"declaration":    true,
		"module":         "commonjs",
		"outDir":         "./dist/",
		"target":         "ESnext",
		// Strict Checks
		"strict": true,
		// Linter Checks
		"noImplicitReturns": true,
		// Advanced
		"importsNotUsedAsValues": "error",
		"noEmitOnError":          true,
	},
	"include": ["./src/"],
	"typedocOptions": {
		"name":        "extrajs",
		"entryPoints": ["./src/index.ts"],
		"out":         "./docs/api/",
	},
}
