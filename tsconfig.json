{
	"compilerOptions": {
		"outDir": "./dist/",
		"target"            : "ES2020",
		"module"            : "commonjs",
		"strict"            : true,
		"importsNotUsedAsValues": "error",
		"noImplicitReturns" : true,
		"removeComments"    : true,
		"noEmitOnError"     : true
	},
	"include": ["./src/"],
	"typedocOptions": {
		"name":        "extrajs",
		"entryPoints": "./src/index.ts",
		"out":         "./docs/api/"
	}
}
