{
	"compilerOptions": {
		// Type Checking
		"noImplicitOverride": true,
		"noImplicitReturns":  true,
		"noUnusedLocals":     true,
		"noUnusedParameters": true,
		"strict":             true,

		// Modules
		"module":           "ES2020",
		"moduleResolution": "Node",

		// Emit
		"declaration":            true,
		"importsNotUsedAsValues": "error",
		"noEmitOnError":          true,
		"outDir":                 "./dist/",

		// Language and Environment
		"target": "ES2020",

		// Completeness
		"skipLibCheck": true,
	},
	"include": ["./src/"],
	"typedocOptions": {
		"name":        "extrajs",
		"entryPoints": ["./src/index.ts"],
		"out":         "./docs/api/",
	},
}
